<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_store_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StoreDetailsFragment">

    <TextView
        android:id="@+id/nameStoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del comercio"
        app:layout_constraintBottom_toTopOf="@+id/descriptionStoreTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/descriptionStoreTxt"
        android:layout_width="332dp"
        android:layout_height="179dp"
        android:text="DescripciÃ³n del comercio"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameStoreTxt" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />
</androidx.constraintlayout.widget.ConstraintLayout>