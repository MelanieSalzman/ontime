<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_login_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginStoreFragment">

    <TextView
        android:id="@+id/title_store_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola! Si queres administrar tus filas"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_store_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle_store_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa ahora"
        app:layout_constraintBottom_toTopOf="@+id/email_store_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_store_txt" />

    <EditText
        android:id="@+id/email_store_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/password_store_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_store_txt" />

    <EditText
        android:id="@+id/password_store_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_store_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_store_editText" />

    <Button
        android:id="@+id/btn_store_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_store_fb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_store_editText" />

    <Button
        android:id="@+id/btn_login_store_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa con facebook"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_store_ig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_store_login" />

    <Button
        android:id="@+id/btn_login_store_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa con google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_store_ig" />

    <Button
        android:id="@+id/btn_login_store_ig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa con Instagram"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_store_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_store_fb" />

</androidx.constraintlayout.widget.ConstraintLayout>